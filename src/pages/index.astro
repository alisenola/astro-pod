---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import astropodConfig from "./../../astropod.conf.cjs";
import HeaderCard from "../components/HeaderCard.astro";

console.log(astropodConfig);

const posts = (await getCollection("podcast")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout>
  <HeaderCard />

  <div class="card min-w-full bg-base-100 shadow-md p-3 pb-3 mt-12">
    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.cover}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
      ))
    }
  </div>
</BaseLayout>
